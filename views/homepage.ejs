<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Welcome - Hungry To Eat</title>
    <!-- for icons  -->
    <link rel="stylesheet" href="https://unicons.iconscout.com/release/v4.0.0/css/line.css">
    <!-- bootstrap  -->
    <link rel="stylesheet" href="/stylesheets/bootstrap.min.css">
    <!-- for swiper slider  -->
    <link rel="stylesheet" href="/stylesheets/swiper-bundle.min.css">

    <!-- fancy box  -->
    <link rel="stylesheet" href="/stylesheets/jquery.fancybox.min.css">
    <!-- custom css  -->
    <link rel="stylesheet" href="/stylesheets/style.css">
</head>

<body class="body-fixed">
    <!-- start of header  -->
    <header class="site-header">
        <div class="container">
            <div class="row">
                <div class="col-lg-2">
                    <div class="header-logo">
                        <a href="/homepage">
                            <img src="/images/logo.png" width="60" height="60" alt="Logo">
                        </a>
                    </div>
                </div>
                <div class="col-lg-10">
                    <div class="main-navigation">
                        <button class="menu-toggle"><span></span><span></span></button>
                        <nav class="header-menu">
                            <ul class="menu food-nav-menu">
                                <li><a href="/adminHomepage">Home</a></li>
                            </ul>
                        </nav>
                        <div class="header-right">
<!--                             <form action="#" class="header-search-form for-des"> -->
<!--                                 <input type="search" class="form-input" placeholder="Search Here..."> -->
<!--                                 <button type="submit"> -->
<!--                                     <i class="uil uil-search"></i> -->
<!--                                 </button> -->
<!--                             </form> -->
                            <a onClick="openMyCart()" class="header-btn header-cart">
                                <i class="uil uil-shopping-bag"></i>
                                <span class="cart-number" id="cart-number-count">0</span>
                            </a>
                            <div class="dropdown">
                                <label><button onclick="myFunction()" class="header-username"
                                        style="color: #ff8243; padding: 4px 8px;"><b><i>
                                                <%= username %>
                                            </i></b></button></label>
                                <div id="myDropdown" class="dropdown-content">
                                    <a href="/myorders">My Orders</a>
                                    <a href="/settings">Settings</a>
                                    <a href="/logout">Sign Out</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </header>
    <!-- header ends  -->

    <section style="background-image: url(assets/images/menu-bg.png);" class="our-menu section bg-light repeat-img"
        id="menu">
        <div class="sec-wp">
            <div class="container">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="sec-title text-center mb-5">
                            <p class="sec-sub-title mb-3">Thực đơn</p>
                            <h2 class="h2-title">Tươi ngon tròn vị</h2>
                            <div class="sec-title-shape mb-4">
                                <img src="/images/title-shape.svg" alt="">
                            </div>
                        </div>
                    </div>
                </div>
                <div class="menu-tab-wp">
                    <div class="row">
                        <div class="col-lg-12 m-auto">
                            <div class="menu-tab text-center">
                                <ul class="filters"  style="padding: 2px">
                                    <div class="filter-active"></div>
                                    <li class="filter" style="padding: 10px"
                                        data-filter=".all, .burger, .dessert, .combo, .chicken, .icecream, .snackfood, .colddrink, .hotdrink">
                                        All
                                    </li>
                                    <li class="filter" style="padding: 10px" data-filter=".burger">
                                        Bánh burger
                                    </li>
                                    <li class="filter" style="padding: 10px" data-filter=".dessert">
                                        Bánh tráng miệng
                                    </li>
                                    <li class="filter"  style="padding: 10px" data-filter=".combo">
                                        Combo
                                    </li>
                                    <li class="filter" style="padding: 10px" data-filter=".chicken">
                                        Gà rán
                                    </li>
                                    <li class="filter" style="padding: 10px" data-filter=".icecream">
                                        Kem
                                    </li>
                                    <li class="filter" style="padding: 10px" data-filter=".snackfood">
                                        Món ăn nhẹ
                                    </li>
                                    <li class="filter" style="padding: 10px"  data-filter=".colddrink">
                                        Thức uống lạnh
                                    </li>
                                    <li class="filter" style="padding: 10px"  data-filter=".hotdrink">
                                        Thức uống nóng
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="menu-list-row">
                    <div class="row g-xxl-5 bydefault_show" id="menu-dish"
                        style="background-image: url(/images/menu-bg.png);">
                        <% for(let i=0;i<items.length;i++) { %>
                            <div class="col-lg-4 col-sm-6 dish-box-wp <%= items[i].item_category %>"
                                data-cat="breakfast">
                                <div class="dish-box text-center">
                                    <div class="dist-img">
                                        <img src="/images/dish/<%= items[i].item_img %>"
                                             alt="<%= items[i].item_name %>"
                                             width="250px"
                                             height="250px">
                                    </div>
                                    
                                    <!-- <div class="dish-rating">
                                        <%= items[i].item_rating %>
                                            <i class="uil uil-star"></i>
                                    </div> -->
                                    <div class="dish-title">
                                        <h3 class="" style="font-size: 20px">
                                            <%= items[i].item_name %>
                                        </h3>
                                        <!-- <p>
                                            <%= items[i].item_calories %>
                                        </p> -->
                                    </div>
                                    <div class="dish-info">
                                        <ul>
                                            <!-- <li>
                                                <p>Type</p>
                                                <b>
                                                    <%= items[i].item_type %>
                                                </b>
                                            </li>
                                            <li>
                                                <p>Persons</p>
                                                <b>
                                                    <%= items[i].item_serving %>
                                                </b>
                                            </li> -->
                                        </ul>
                                    </div>
                                    <div class="dist-bottom-row">
                                        <ul >
                                            <li>
                                                <b> <%= items[i].item_price %> đ</b>
                                            </li>
                                            <li>
                                                <button class="dish-add-btn" id="btn<%= items[i].item_id %>"
                                                    onClick="addToCart(<%= items[i].item_id %>)">
                                                    <i class="uil uil-plus"></i>
                                                </button>
                                            </li>
                                        </ul>
                                    </div>
                                </div>
                            </div>
                            <% } %>
                    </div>
                </div>
            </div>
        </div>
    </section>

            <!-- footer starts  -->
            <footer class="site-footer" id="contact">
                <div class="top-footer section">
                    <div class="sec-wp">
                        <div class="container">
                            <div class="row">
                                <div class="col-lg-4">
                                    <div class="footer-info">
                                        <div class="footer-logo">
                                            <a href="/logout">
                                                <img src="/images/logo.png" alt="">
                                            </a>
                                        </div>
                                        <p>Eat, eat, eat</p>
