<!--                                                 <li><a href="#contact">Contact</a></li> -->

<!--                                             </ul> -->
<!--                                         </div> -->
                                        <div class="footer-menu">
                                            <h3 class="h3-title">Cửa hàng</h3>
                                            <ul>
                                                <li><a href="#">Terms & Conditions</a></li>
                                                <li><a href="#">Privacy Policy</a></li>
                                                <li><a href="#">Cookie Policy</a></li>
                                            </ul>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="bottom-footer">
                    <div class="container">
                        <div class="row">
                            <div class="col-lg-12 text-center">
                                <div class="copyright-text">
                                    <p>Copyright &copy; 2024 <span class="name">Nhóm 17 </span>All Rights
                                        Reserved.
                                    </p>
                                </div>
                            </div>
                        </div>
                        <button class="scrolltop"><a href="#"><i class="uil uil-angle-up"></i></a></button>
                    </div>
                </div>
            </footer>
        </div>
    </div>


