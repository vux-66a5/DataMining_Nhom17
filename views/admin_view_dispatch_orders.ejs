    <script>
        let order_id = [];
        function checkingDispatch() {
            console.log("Receving");
            const checking = document.querySelectorAll(".dispatch");
            for (let index = 0; index < checking.length; index++) {
                console.log(checking[index].checked);
                if (checking[index].checked) {
                    order_id.push(checking[index].name);
                    console.log(checking[index].name);
                    console.log(order_id[index]);
                }
            }
        }

        function dispatching() {
            let url = "http://localhost:3000/admin_view_dispatch_orders";
            fetch(url, {
                method: "POST", headers: { 'Content-Type': 'application/json' }, body: JSON.stringify({
                    order_id_s: order_id
                })
            });
            window.location.href = "http://localhost:3000/admin_view_dispatch_orders";
        }
    </script>
